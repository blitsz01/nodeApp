<section class="resume-section p-3 p-lg-5 d-flex flex-column" id="experience">
  <div class="my-auto" ng-controller="AboutController">
    <h3 class="mb-5">Experience</h3>
    <div>
      {{#each myexp.experience}}
      <div class="resume-item d-flex flex-column flex-md-row mb-5">
        <div class="resume-content mr-auto">
          <h4 class="mb-0">{{this.myexp.jobTitle}}</h4>
          <div class="subheading mb-3">{{this.companyName}}</div>
          <p>{{this.jobDescription}}</p>
        </div>
        <div class="resume-date text-md-right">
          <span class="text-primary">{{this.myexp.date}}</span>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>



